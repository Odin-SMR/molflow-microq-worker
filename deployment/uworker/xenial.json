{
    "_info_uworker_config": "The uworker config file must contain: export UWORKER_JOB_API_ROOT=http://example.com/uservice/api/root, export UWORKER_JOB_API_USERNAME=<uservice username>, export UWORKER_JOB_API_PASSWORD=<uservice password>",
    
    "variables": {
        "openstack_free_floating_ip": null,
        "uworker_config_file": null,
        "test_host": "",
        "test_ssh_key": ""
    },

    "_info_builders": "The openstack builder is configured for smog. The virtualbox builder is for running the worker on the local machine. The null builder is used for testing of provisioners",
    
    "builders": [
        {
            "type": "openstack",
            "ssh_username": "ubuntu",
            "image_name": "uworker_openstack_ubuntu16.04",
            "source_image": "c5352437-d878-4e64-9814-b1aa7d31c797",
            "flavor": "c1.small",
            "networks": ["fc750cc8-8bfa-420a-88e0-6825464dfe3d"],
            "floating_ip": "{{user `openstack_free_floating_ip`}}",
            "security_groups": ["default"]
        },
        {
            "type": "null",
            "ssh_username": "ubuntu",
            "ssh_host": "{{user `test_host`}}",
            "ssh_private_key_file": "{{user `test_ssh_key`}}"
        },
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<enter><f6><esc>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs><bs><bs>",
                "<bs><bs><bs>",
                "/install/vmlinuz noapic ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=SWEDISH ",
                "keyboard-configuration/variant=SWEDISH console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz quiet --- ",
                "<enter>"
            ],
            "boot_wait": "5s",
            "http_directory": "http",
            "http_port_max": 9001,
            "http_port_min": 9001,
            "disk_size": 20000,
            "hard_drive_interface": "sata",
            "guest_os_type": "Ubuntu_64",
            "iso_checksum": "d2d939ca0e65816790375f6826e4032f",
            "iso_checksum_type": "md5",
            "iso_url": "http://releases.ubuntu.com/xenial/ubuntu-16.04.1-server-amd64.iso",
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "ssh_password": "molflow",
            "ssh_username": "molflow",
            "ssh_wait_timeout": "20m",
            "vm_name": "uworker-xenial",
            "output_directory": "uworker-xenial",
            "headless": false,
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "2048"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"]
            ]
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "only": [ "virtualbox-iso" ],
            "keep_input_artifact": false,
            "compression_level": 9
        }
    ],
    
    "_info_provisioners": "The sleeps waits for complete boot of the instance, so that ssh becomes available.",
    
    "provisioners": [
        {
            "type": "shell",
            "inline": [ "sleep 10" ],
            "only": [ "openstack", "virtualbox-iso" ]
        },
        {
            "type": "shell",
            "only": ["virtualbox-iso"],
            "execute_command": "echo molflow | {{ .Vars }} sudo -E -S sh '{{ .Path }}'",
            "script": "scripts/setup_root.sh"
        },
        {
            "execute_command": "echo molflow | sudo -S sh '{{ .Path }}'",
            "inline": ["shutdown -r now", "sleep 60"],
            "type": "shell",
            "only": ["virtualbox-iso"]
        },
        {
            "command": "sleep 10",
            "type": "shell-local",
            "only": ["virtualbox-iso"]
        },
        {
            "type": "shell",
            "script": "scripts/setup_apt.sh",
            "only": ["virtualbox-iso"]
        },
        {
            "type": "shell",
            "script": "scripts/setup_xenial.sh"
        },
        {
            "type": "shell",
            "script": "scripts/setup_docker.sh"
        },
        {
            "type": "file",
            "source": "microq.tar.gz",
            "destination": "/tmp/microq.tar.gz"
        },
        {
            "type": "file",
            "source": "scripts/start_worker.sh",
            "destination": "/tmp/start_worker.sh"
        },
        {
            "type": "file",
            "source": "../../uworker-requirements.txt",
            "destination": "/tmp/uworker-requirements.txt"
        },
        {
            "type": "file",
            "source": "{{user `uworker_config_file`}}",
            "destination": "/tmp/uworker.conf"
        },
        {
            "type": "shell",
            "script": "scripts/setup_uworker.sh"
        },
        {
            "type": "shell",
            "script": "scripts/setup_supervisor.sh"
        }
    ]
}
